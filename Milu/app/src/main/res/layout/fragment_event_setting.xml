<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/blurred_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:radius="24"
        android:src="@drawable/user01"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="44dp"
        android:paddingTop="@dimen/dimen_56"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_08"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_08">

                    <charles.com.milu.utils.CustomClickTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="add header photo"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/settings_next_icon3"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_vd"
                    android:layout_marginTop="@dimen/dimen_08"
                    android:layout_marginStart="@dimen/dimen_16"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_160">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_160"
                        android:layout_margin="@dimen/dimen_08"
                        android:scaleType="centerInside"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/event_add_image_icon"
                        android:layout_centerInParent="true"
                        android:scaleType="center"/>

                </RelativeLayout>

            </LinearLayout>
            <!--title-->
            <LinearLayout
                android:id="@+id/lay2"
                android:layout_below="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_08">
                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_08"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="title"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@color/transparent"
                        android:textSize="18sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:background="@drawable/line_vd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_08"
                    android:orientation="horizontal">
                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_08"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="address"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@color/transparent"
                        android:textSize="18sp"/>
                </LinearLayout>


            </LinearLayout>
            <!--ticket-->
            <LinearLayout
                android:id="@+id/lay3"
                android:layout_below="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="36.0dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:gravity="center_vertical"
                android:background="@color/grid_state_focused"
                android:orientation="horizontal">

                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="ticket url"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_31"
                        android:layout_weight="5"
                        android:background="@color/transparent"
                        android:textSize="18sp"/>


            </LinearLayout>
            <!--all day-->
            <LinearLayout
                android:id="@+id/lay4"
                android:layout_below="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:text="all-day"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        style="@style/SwitchStyle"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_vd"
                    android:layout_marginStart="@dimen/dimen_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="starts"/>

                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_08"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text="dec 15, 2017    10:00p"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_vd"
                    android:layout_marginStart="@dimen/dimen_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">
                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="duration"/>

                    <charles.com.milu.CustomViews.TitleTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_08"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:text="2h 30m"
                        android:layout_marginEnd="@dimen/dimen_16"
                        tools:ignore="RtlCompat" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay5"
                android:layout_below="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:padding="@dimen/dimen_08"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">
                <charles.com.milu.CustomViews.TitleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_08"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="description"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay6"
                android:layout_below="@+id/lay5"
                android:layout_width="match_parent"
                android:layout_height="95.0dp"
                android:padding="@dimen/dimen_08"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">
                <charles.com.milu.CustomViews.TitleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_08"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="interest tags"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay7"
                android:layout_below="@+id/lay6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <charles.com.milu.utils.CustomClickTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textColor="@color/white"
                        android:text="private"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:saveEnabled="true" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:background="@drawable/line_vd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <charles.com.milu.utils.CustomClickTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textColor="@color/white"
                        android:text="allow guest to invite"/>


                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay8"
                android:layout_below="@+id/lay7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_25"
                android:background="@color/grid_state_focused"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <charles.com.milu.utils.CustomClickTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textColor="@color/white"
                        android:text="mingle"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:background="@drawable/line_vd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <charles.com.milu.utils.CustomClickTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:textColor="@color/white"
                        android:text="networking"/>

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay9"
                android:layout_below="@+id/lay8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_16"
                android:orientation="vertical">

                <charles.com.milu.CustomViews.TitleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/color_DimGray"
                    android:text="@string/event_setting_des"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay10"
                android:layout_below="@+id/lay9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_16"
                android:background="@color/grid_state_focused"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dimen_25">
                <charles.com.milu.utils.CustomClickTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/color_Milumain"
                    android:text="DELETE EVENT"/>

            </LinearLayout>

            <View
                android:layout_below="@+id/lay10"
                android:layout_width="wrap_content"
                android:background="@color/transparent"
                android:layout_height="100dp"/>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_toolbar"/>


</FrameLayout>