<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:fontPath="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meetUp_cell"
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:background="@drawable/beliefs"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="116dp"
                android:background="@drawable/cellgradient2"/>

            <ImageView
                android:id="@+id/meetUp_selectImage"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/contacts_gallery_unselected2"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="252dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">

                    <charles.com.milu.CustomViews.RegularTitleTextView
                        android:id="@+id/meetUp_title"
                        android:layout_width="250dp"
                        android:layout_height="25dp"
                        android:text="outdoor adventure"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:gravity="bottom"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
