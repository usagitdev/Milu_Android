<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimen_40"
    android:layout_marginEnd="@dimen/dimen_40">

    <ImageView
        android:id="@+id/backImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:layout_alignBottom="@+id/lay_fb_button"
        app:srcCompat="@drawable/dialog_back_white" />

    <ImageView
        android:id="@+id/imv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/alert_login_image" />

    <charles.com.milu.CustomViews.MediumTitleTextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log in"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/imv_login"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/dimen_16"/>


    <charles.com.milu.CustomViews.TitleTextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/str_login"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/txtLogin"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20" />


    <RelativeLayout
        android:id="@+id/lay_fb_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/dimen_36"
        android:padding="@dimen/dp10">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_56"
            app:cardBackgroundColor="@color/color_Milumain"
            app:cardCornerRadius="@dimen/dimen_08"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen_36"
            android:layout_marginEnd="@dimen/dimen_36"
            android:id="@+id/cdv_fb_button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/registration_facebook_icon"/>
                <charles.com.milu.CustomViews.TitleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="login"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp5"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
