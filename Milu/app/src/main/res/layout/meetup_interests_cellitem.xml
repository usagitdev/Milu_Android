<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="130.5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meetUp_cell"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:src="@drawable/beliefs"
        android:scaleType="centerCrop"/>


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cellgradient2"/>

        <ImageView
            android:id="@+id/meetUp_selectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/contacts_gallery_unselected2"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dimen_04"
            android:layout_alignParentBottom="true">

            <charles.com.milu.CustomViews.RegularTitleTextView
                android:id="@+id/meetUp_title"
                android:layout_width="wrap_content"
                android:layout_height="21.0dp"
                android:text="outdoor adventure"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_marginBottom="-4dp"/>

            <charles.com.milu.CustomViews.TitleTextView
                android:id="@+id/meetUp_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="21.0dp"
                android:text="outdoor adventure"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>


        </LinearLayout>

</RelativeLayout>
