<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:fontPath="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/calEvent_cell"
        android:layout_width="fill_parent"
        android:layout_height="60dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/callistcell_onlineImage"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimenMargin_08"
            app:civ_border_width="0.5dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/callistcell_eventImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/callistcell_onlineImage"
            android:layout_marginLeft="@dimen/dimenMargin_08"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/colorBlack"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/callistcell_eventName"
            android:layout_width="160dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@+id/callistcell_eventImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_08"
            android:text="@string/andrea_bocceli"
            fontPath="@+sting/font_light"
            android:textSize="@dimen/dimenFont_14"/>

    </RelativeLayout>

</RelativeLayout>
