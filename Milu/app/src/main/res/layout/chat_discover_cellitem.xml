<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116.0dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/neweventback00"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cell_back_gradient"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|start"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dimen_04">

        <charles.com.milu.CustomViews.RegularTitleTextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="haunted house"
            android:textColor="@color/white"
            android:layout_marginBottom="-3dp"
            android:textSize="18sp"
            />
        <charles.com.milu.CustomViews.TitleTextView
            android:id="@+id/like_count_text"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="68 people"
            android:textSize="18sp"
            android:textColor="@color/color_Isabelline"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="end|bottom">
        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speech_bubble_1_vd"/>

        <charles.com.milu.CustomViews.TitleTextView
            android:id="@+id/message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="301"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
