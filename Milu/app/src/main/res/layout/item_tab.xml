<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <charles.com.milu.utils.CustomImageButton
        android:id="@+id/item_tab_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/tab_event_src"
        android:padding="2dp" />

    <charles.com.milu.CustomViews.TitleTextView
        android:id="@+id/item_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignBottom="@+id/item_tab_imv"
        android:layout_centerHorizontal="true"
        android:textSize="12.0sp"
        android:textColor="@color/color_Milumain"
        />
</RelativeLayout>