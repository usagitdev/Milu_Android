<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cell_day">

    <charles.com.milu.CustomViews.ExtraLightTextView
        android:id="@+id/widget_item_calendar_cardview_date"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="10dp"
        android:textSize="25.0sp"
        android:text="1"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <ImageView
        android:id="@+id/today_marker"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/widget_item_calendar_cardview_selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/widget_item_calendar_cardview_date"
        android:layout_marginBottom="@dimen/dp5"/>

</RelativeLayout>