<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardElevation="4dp">
        <ImageView
            android:id="@id/profileImageView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user01"
            android:layout_marginBottom="45dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center|left"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/nameAgeTxt"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Nikkl, 18"
                android:fontFamily="WorkSans_Light"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

               <RelativeLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent">

                   <TextView
                       android:id="@+id/liveMingle_commonfriendtxt"
                       android:layout_width="20dp"
                       android:layout_height="21dp"
                       android:text="19"
                       android:textColor="@color/colorWhite"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"/>

                   <ImageView
                       android:layout_width="23dp"
                       android:layout_height="20dp"
                       android:background="@drawable/mingle_common_friends_icon"
                       android:id="@+id/liveMingle_commonfriendicon"
                       android:layout_toLeftOf="@+id/liveMingle_commonfriendtxt"
                       android:layout_centerVertical="true"/>

                   <TextView
                       android:id="@+id/liveMingle_commoninteresttxt"
                       android:layout_width="20dp"
                       android:layout_height="21dp"
                       android:text="18"
                       android:textColor="@color/colorWhite"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="2dp"
                       android:layout_toLeftOf="@+id/liveMingle_commonfriendicon"
                       />

                   <ImageView
                       android:layout_width="27dp"
                       android:layout_height="18dp"
                       android:layout_centerVertical="true"
                       android:layout_toLeftOf="@+id/liveMingle_commoninteresttxt"
                       android:background="@drawable/mingle_common_interest_icon"
                       android:id="@+id/liveMingle_friendicon"/>

               </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
