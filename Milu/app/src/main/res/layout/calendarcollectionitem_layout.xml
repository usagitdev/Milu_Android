<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:fontPath="http://schemas.android.com/tools"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/calCollectionEvent_cell"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/calCollectionEvent_Image"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:background="@drawable/arts"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:id="@+id/calCollection_day"
        android:layout_width="106dp"
        android:layout_height="116dp">

        <!--<ImageView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:background="@color/color_Onyx"-->
            <!--android:alpha="0.85"-->
            <!--android:scaleType="centerCrop"/>-->

        <com.sutanu.blureffectview.BlurEffectView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:blurEffectViewRadius="16dp"
            app:blurEffectViewOverlayColor="@color/color_Onyx"
            android:alpha="0.75"/>


        <ImageView
            android:id="@+id/calCollection_BlurView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/event_collection_calendar_icon1"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/calCollectionEvent_gradient"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:layout_marginLeft="106dp"
        android:scaleType="centerCrop"
        android:background="@drawable/cellgradient2" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="110dp"
                    android:orientation="vertical">

                    <charles.com.milu.CustomViews.RegularTitleTextView
                        android:id="@+id/calCollectionEvent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="juan burns"
                        android:layout_marginBottom="-3dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                    <charles.com.milu.CustomViews.TitleTextView
                        android:id="@+id/calCollectionEvent_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2K people"
                        android:textColor="@color/color_Manatee"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
