<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fontPath="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginBottom="-32dp"
        android:layout_width="128dp"
        android:layout_height="133dp">

        <ImageView
            android:id="@+id/map_DropPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/map_drop_pin"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="73dp"
            android:id="@+id/map_DropImage"
            android:layout_height="73dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_DropCalImage"
            android:background="@drawable/map_calendar_button"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>







</RelativeLayout>
