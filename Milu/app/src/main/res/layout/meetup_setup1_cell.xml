<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meetUp_cell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/beliefs"
        android:scaleType="centerCrop"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cell_back_gradient"/>

    <ImageView
        android:id="@+id/meetUp_list_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/meetups_list_selected"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <charles.com.milu.CustomViews.RegularTitleTextView
        android:id="@+id/meetUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="outdoor adventure"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_04"
        android:layout_marginStart="@dimen/dimen_04"
        android:gravity="bottom"/>


</RelativeLayout>
