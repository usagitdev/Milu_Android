<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/predictedRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:paddingTop="8.5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/meetups_location_current_location_icon"
        android:layout_marginStart="10.5dp"
        android:visibility="gone"
        />

    <charles.com.milu.CustomViews.TitleTextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_50"
        android:textColor="@color/white"
        android:text="@string/current_location"
        android:textSize="16sp"
        android:visibility="visible"/>

    <charles.com.milu.CustomViews.TitleTextView
        android:id="@+id/address_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:textColor="#B2FFFFFF"
        android:text="@string/locationname"
        android:layout_marginStart="@dimen/dimen_50"
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_below="@+id/address_sub"
        android:layout_marginTop="8.5dp"
        android:src="@drawable/line_vd"/>

</RelativeLayout>