<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlurDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- forces Dialog view to be expanded to full screen -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorDialogClear</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DialogSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>